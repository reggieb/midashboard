<h1>Listing widgets</h1>

<p><%= link_to 'New Widget', new_widget_path %></p>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Chart</th>
    <th>Actions</th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.name %></td>
    <td><%= widget.title %></td>
    <td><%= widget.chart_type %>
    <td>
      <%= link_to 'Show', widget %>
      <%= link_to 'Edit', edit_widget_path(widget) %>
      <%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

