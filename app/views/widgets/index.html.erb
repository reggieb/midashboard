<h1>Listing widgets</h1>

<p><%= link_to 'New Widget', new_widget_path, class: 'btn btn-primary' %></p>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Data type</th>
    <th>Chart</th>
    <th>Y</th>
    <th>X</th>
    <th colspan="3">Actions</th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.name %></td>
    <td><%= widget.title %></td>
    <td><%= widget.data_type %></td>
    <td><%= widget.chart_type %>
    <td><%= widget.y_field %></td>
    <td><%= widget.x_field %></td>
    <td><%= link_to 'Show', widget, class: 'btn btn-info' %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', widget, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
  </tr>
<% end %>
</table>

