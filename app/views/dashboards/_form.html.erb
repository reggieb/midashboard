<%= form_for(@dashboard) do |f| %>
  <% if @dashboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dashboard.errors.count, "error") %> prohibited this dashboard from being saved:</h2>

      <ul>
      <% @dashboard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <ul>
  <% @widgets.each do |widget| %>
    <li>
      <%= check_box_tag(
            "dashboard[widget_ids][]",
            widget.id,
            @dashboard.widgets.include?(widget),
            id: "dashboard_widget_ids_#{widget.id}"
          ) %>
      <%= label_tag "dashboard_widget_ids_#{widget.id}", widget.name %>
    </li>
  <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
