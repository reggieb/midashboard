      <h2><%= pluralize(@dashboard.errors.count, "error") %> prohibited this dashboard from being saved:</h2>

      <ul>
      <% @dashboard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <% @widgets.each do |widget| %>
    <%= check_box_tag "dashboard[widget_ids][]",  widget.id, @dashboard.widgets.include?(widget) %>
    <%= widget.name %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
